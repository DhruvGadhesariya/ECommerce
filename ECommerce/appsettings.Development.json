{
  "ConnectionStrings": {
    "Default": "Server=.;Database=ECOMMERCEDb;User Id=sa;Password=YourStrong!Pass;TrustServerCertificate=true"
  },
  "Jwt": {
    "Key": "ReplaceWithLongRandomKey_AtLeast32Chars",
    "Issuer": "ECommerce",
    "Audience": "ECommerce.Client",
    "AccessTokenMinutes": 60
  },
  "Upload": {
    "Root": "wwwroot",
    "Avatars": "uploads/avatars",
    "MaxAvatarBytes": 5242880, // 5MB
    "AllowedExtensions": [ ".png", ".jpg", ".jpeg", ".webp" ]
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 15
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
